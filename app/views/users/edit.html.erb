<%= form_with model: @user do |form| %>
  <% @user.errors.full_messages.each do |m| %>
    <%= m %><br><br>
  <% end %>
  <%= form.label 'Username:' %>
  <%= form.text_field :username, value: 'Your username here' %>
  <%= form.label 'Email:' %>
  <%= form.email_field :email, value: 'example@domain.com' %>
  <%= form.label 'Password:' %>
  <%= form.password_field :password %>
  <%= form.submit 'Submit' %>
<% end %>